@model CorpChat.Entities.Room
@using CorpChat.Models

@{
    ViewBag.Title = "Create";
}

<div class="pt-5">
    <h2>Oda Oluştur</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-10" style="justify-content:center;">
                <div class="row">

                    @if (CurrentSession.User.IsAdmin)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsAdmin)
                                    @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsYonetici, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsYonetici)
                                    @Html.ValidationMessageFor(model => model.IsYonetici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsYetkili, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsYetkili)
                                    @Html.ValidationMessageFor(model => model.IsYetkili, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsKullanici, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsKullanici)
                                    @Html.ValidationMessageFor(model => model.IsKullanici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    }
                    else if (CurrentSession.User.IsYonetici)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsYonetici, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsYonetici)
                                    @Html.ValidationMessageFor(model => model.IsYonetici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsYetkili, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsYetkili)
                                    @Html.ValidationMessageFor(model => model.IsYetkili, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsKullanici, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsKullanici)
                                    @Html.ValidationMessageFor(model => model.IsKullanici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    }
                    else if (CurrentSession.User.IsYetkili)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsYetkili, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsYetkili)
                                    @Html.ValidationMessageFor(model => model.IsYetkili, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsKullanici, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsKullanici)
                                    @Html.ValidationMessageFor(model => model.IsKullanici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    }
                    else if (CurrentSession.User.IsKullanici)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsKullanici, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsKullanici)
                                    @Html.ValidationMessageFor(model => model.IsKullanici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    }



                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-success" />
                    @Html.ActionLink("Geri Dön", "Index", "Room", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    }

</div>