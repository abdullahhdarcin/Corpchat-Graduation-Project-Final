@using CorpChat.Models
@using CorpChat.Entities

@{ 
    List<Category> list = CacheHelper.GetCategoriesFromCache();
}

<div class="bd-example pb-3" style="margin-left: auto; margin-right: auto;">
    <div class="list-group list-group-horizontal-lg" style="text-align: center;">
        <a href="@Url.Action("Index","Home")" class="list-group-item list-group-item-action">Tüm Odalar</a>

        @foreach (Category cat in list)
        {
            <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item list-group-item-action">@cat.Title</a>
        }

    </div>
</div>